<%- include ('../../partials/header') %>
<%- include ('../../partials/navbar') %>

<div class="container">
    <hr>
    <h2>Usuários</h2>
    <a class="btn btn-success" href="/admin/users/create">Criar um usuário</a>
    <hr>
    <table class="table table-bordered">
    
    <thead>
        <tr>
    
            <th>ID</th>
            <th>Email</th>
            <th>Ações</th>
    
        </tr>
    
    </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <th><%= user.id %></th>
                    <th><%= user.email %></th>
                    <th>
                            <a href="/admin/user/edit/<%= user.id %>" class="btn btn-warning">Editar</a>
    
                            <form method="POST" action="/users/delete" style="display: inline;" onsubmit="confirmarDelete(event, this)">
                                <input type="hidden" name="id" value="<%= user.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </th>
                    </tr>
            <%})%>
    
        </tbody>
    </table>
    </div>
    
    <%- include ('../../partials/footer') %>
    <script>
    function confirmarDelete(event, form){
        event.preventDefault()
        var decision = confirm("Tem certeza que deseja apagar esta categoria?")
            if(decision){
                form.submit()
            }
    }
    </script>

<%- include ('../../partials/footer') %>